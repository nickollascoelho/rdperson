<h1>Listing people</h1>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Company</th>
        <th>Salesforce URL</th>
        <th>Created By</th>
        <th colspan="3"></th>
      </tr>
  </thead>
   <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.email %></td>
        <td><%= person.company %></td>
        <td><%= person.host %></td>
        <td><%= person.username %></td>
        <td>
          <%= link_to person, title: "Show" do %>
            <span class="glyphicon glyphicon-search"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_person_path(person),  title: 'Edit' do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
        </td>
        <td>
          <%= link_to person, method: :delete, data: { confirm: 'Are you sure?' }, title: 'Remove' do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>
<br>

<%= link_to new_person_path, title: 'New Person', class: "btn btn-primary" do %>
  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
<% end %>
