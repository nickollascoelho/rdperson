<%= form_for @person, html: {class: "form-horizontal", role: "form"} do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
      <fieldset>
        <div class="form-group">
          <div class="col-md-6"><%= f.text_field :host, :placeholder => "login.salesforce.com", class: "form-control" %></div>
          <div class="col-md-3"><%= f.text_field :username, :placeholder => "username", class: "form-control"  %></div>
          <div class="col-md-3"><%= f.password_field :password, :placeholder => "password", class: "form-control"  %></div>
        </div>
        <div class="form-group">
          <div class="col-md-6"><%= f.text_field :client_id, :placeholder => "client id", class: "form-control" %></div>
          <div class="col-md-3"><%= f.text_field :security_token, :placeholder => "security token", class: "form-control" %></div>
          <div class="col-md-3"><%= f.text_field :client_secret, :placeholder => "client secret", class: "form-control"  %></div>
        </div>
      </fieldset>
    <hr>
    <div class="form-group">
      <div class="col-md-6">
        <%= f.text_field :name, :placeholder => "name", class: "form-control"   %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :last_name, :placeholder => "last name", class: "form-control"   %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-6">
        <%= f.text_field :job_title, :placeholder => "job title", class: "form-control"   %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :company, :placeholder => "company", class: "form-control"   %>
      </div>      
    </div>
    <div class="form-group">
      <div class="col-md-6">
        <%= f.text_field :phone, :placeholder => "phone", class: "form-control"   %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :email, :placeholder => "email", class: "form-control"   %>
      </div>      
    </div>
      <div class="form-group">
      <div class="col-md-12">
        <%= f.text_field :website, :placeholder => "website", class: "form-control"   %>        
      </div>
    </div>
  <br>
  <div>
    <%= f.submit "Submit", class: "btn btn-primary" %>
    <%= link_to 'Back', people_path, class: "btn btn-warning" %>
    <% if @person.id? %>
      <%= link_to 'Show', @person, class: "btn btn-success" %>
    <% end %>
  </div>
<% end %>
